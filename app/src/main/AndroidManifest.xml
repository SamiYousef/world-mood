<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programmer.zombie.worldmood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".LineChartActivity"
            android:label="Line Chart" />
        <activity
            android:name=".BarChartActivity"
            android:label="Bar Chart" />
        <activity
            android:name=".RadarChartActivity"
            android:label="Radar Chart" />
        <activity
            android:name=".ScatterChartActivity"
            android:label="Scatter Chart" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".TagsActivity"
            android:label="Listed tTags" />
    </application>

</manifest>
